<!DOCTYPE html>
<html>
<head>
  <title>fulfilld &mdash; succeed with friends</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<div id="header">
			<div id="headercontent">
				<h1 id="logo"><%= link_to "fulfilld.com", root_url %></h1>
				<div id="nav">
				<% if current_user %>
					<!-- Hello, <strong><%= current_user.display_name %></strong> -->
					<%= link_to "Profile", current_profile_path %>
					<%= link_to "Friend Requests (#{Friendship.find_all_by_friend_id_and_status(current_user.id,0).count})", pending_path %>
					<%= link_to "Log out", logout_path %>
				<% else %>
					<%= link_to "Register", register_path %>
					<%= link_to "Log in", login_path %>
				<% end %>
				</div><!-- #nav -->
				<div class="clear"></div>				
			</div><!-- #headercontent -->
		</div><!-- #header -->
		<div id="content">
			<% flash.each do |name, msg| %>
			  <%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
			<%= yield %>
		</div><!-- #content -->
		<div id="footer">
			<div id="footercontent">
				<p>&copy; <%= Time.now.year %> fulfilld.com</p>
				<!-- <ul>
									<li>About</li>
									<li>Privacy</li>
									<li>Terms</li>
									<li>Help</li>
									<div class="clear"></div>
								</ul> -->
				<div class="clear"></div>
			</div><!-- #footercontent -->
		</div><!-- #footer -->		
	</div><!-- #container -->
</body>
</html>
