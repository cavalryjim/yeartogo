<h2><%= @goal.name %> / <%= @goal.category.name %></h2>
<p>Due in <%= distance_of_time_in_words(@goal.timeline, Date.today) %></p>
<p>Completion: <%= number_to_percentage(@goal.completion, :precision => 0) %></p>

<h2>Comments</h2>
<% if !@goal.comments.blank? %>
  <% for comment in @goal.comments %>
    <%= link_to "@#{comment.user.username}", profile_path(comment.user.username) %><br />
		<%= comment.body %>
  <% end %>
<% else %>
  <p>No comments yet!</p>
<% end %>

<%= form_for @comment do |f| -%>
	<% if @comment.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

			<ul>
			<% @comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	
	<%= f.hidden_field :goal_id, :value => @goal.id %>
	
  <p>@<%= current_user.username %><br />
	<%= f.text_area :body %></p>
	
	<p class="button"><%= f.submit "Comment" %></p>
<% end -%>